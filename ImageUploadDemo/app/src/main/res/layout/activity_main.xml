<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.server.imageuploaddemo.MainActivity">

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@color/colorBtnBack"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_attachment_black_24dp"
        android:padding="10dp"
        android:text="Choose Image"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@color/colorBtnBack"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_file_upload_black_24dp"
        android:padding="10dp"
        android:text="Upload Image"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnUpload"
        android:layout_below="@id/btnChooseImage" />

</RelativeLayout>
